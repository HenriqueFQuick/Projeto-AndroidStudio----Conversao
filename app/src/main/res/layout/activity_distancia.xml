<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Distancia">

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              android:layout_marginTop="100dp"
              android:text="Digite a sua distancia"
              android:textAlignment="center"
              android:textSize="22sp"/>

    <EditText android:id="@+id/edt_Distancia"
              android:layout_width="100dp"
              android:layout_height="wrap_content"
              android:text="0"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              android:layout_marginTop="150sp"
              android:textAlignment="center"
              android:inputType="numberDecimal"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintTop_toBottomOf="@id/edt_Distancia"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintLeft_toRightOf="@id/radioGroup_Distancia1"
              app:layout_constraintRight_toLeftOf="@+id/radioGroup_Distancia2"
              android:layout_marginBottom="400dp"
              android:text="Para"
              android:textSize="25sp"/>

    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="80dp"
            android:layout_marginBottom="40dp"
            android:id="@+id/radioGroup_Distancia1">

        <RadioButton android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:checked="false"
                     android:id="@+id/op_miles1"
                     android:text="Miles"
                     android:textSize="25sp"/>

        <RadioButton android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:checked="false"
                     android:id="@+id/op_Km1"
                     android:text="Km"
                     android:textSize="25sp"/>


    </RadioGroup>

    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="80dp"
            android:layout_marginBottom="40dp"
            android:id="@+id/radioGroup_Distancia2">

        <RadioButton android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:checked="false"
                     android:id="@+id/op_miles2"
                     android:text="Miles"
                     android:textSize="25sp"/>

        <RadioButton android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:checked="false"
                     android:id="@+id/op_Km2"
                     android:text="Km"
                     android:textSize="25sp"/>


    </RadioGroup>

    <Button android:id="@+id/btn_Converter_Distancia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/radioGroup_Distancia2"
            android:text="Converter"
            android:padding="15dp"
            android:layout_marginBottom="100dp"/>

    <TextView android:id="@+id/txt_Resultado_Distancia"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintTop_toBottomOf="@id/btn_Converter_Distancia"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              android:hint="0.0"
              android:textSize="50sp"
              android:textAlignment="center"/>

    <Button android:id="@+id/btn_voltar_Distancia_Main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/txt_Resultado_Distancia"
            app:layout_constraintTop_toBottomOf="@id/radioGroup_Distancia2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="30dp"
            app:layout_constraintHorizontal_bias="0.758"
            app:layout_constraintVertical_bias="0.888"
            android:text="Voltar"/>

</android.support.constraint.ConstraintLayout>