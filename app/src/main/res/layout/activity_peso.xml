<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Peso"
        android:background="#FFF">

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              android:layout_marginTop="100dp"
              android:layout_marginLeft="16dp"
              android:layout_marginRight="16dp"
              android:text="Digite o seu peso"
              android:textAlignment="center"
              android:textSize="30sp"/>

    <EditText android:id="@+id/edt_Peso"
              android:layout_width="50dp"
              android:layout_height="wrap_content"
              android:text="0"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              android:layout_marginTop="150sp"
              android:textAlignment="center"
              android:inputType="numberDecimal"/>

    <Spinner android:id="@+id/spinner_Peso1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             app:layout_constraintRight_toLeftOf="@id/imagem"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             android:layout_marginBottom="140dp"/>

    <Spinner android:id="@+id/spinner_Peso2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             app:layout_constraintLeft_toRightOf="@id/imagem"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             android:layout_marginBottom="140dp"
             android:layout_marginLeft="20dp"/>

    <ImageView android:id="@+id/imagem"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               android:layout_marginLeft="16dp"
               android:layout_marginRight="16dp"
               android:src="@drawable/peso"/>


    <Button android:id="@+id/btn_Converter_Peso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Converter"
            android:padding="15dp"
            android:layout_marginBottom="116dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>

    <TextView android:id="@+id/txt_Resultado_Peso"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintTop_toBottomOf="@id/btn_Converter_Peso"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              android:hint="0"
              android:textSize="50sp"
              android:textAlignment="center"
              android:layout_marginLeft="16dp"
              android:layout_marginRight="16dp"/>

    <Button android:id="@+id/btn_voltar_Peso_Main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="26dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="26dp"
            android:text="Voltar"/>

</android.support.constraint.ConstraintLayout>